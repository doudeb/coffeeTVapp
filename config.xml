<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.coffeeTVAPP"
        version   = "1.0.3">
    <name>CoffeePokeTV</name>

    <description>
        The coffeepoke TV application
    </description>

    <author href="http://www.coffeepoke.com" email="edouard@coffeepoke.com">
        CoffeePoke Team
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />

    <preference name="phonegap-version" value="2.2.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="true" />
    <preference name="hardwareAccelerated"       value="true" />
    <preference name="splash-screen-duration" value="2000" />

    <icon src="static/img/icon.png" />
    <icon src="static/img/icon-36.png"          gap:platform="android"    gap:density="ldpi" />
    <icon src="static/img/icon-48.png"          gap:platform="android"    gap:density="mdpi" />
    <icon src="static/img/icon-72.png"          gap:platform="android"    gap:density="hdpi" />
    <icon src="static/img/icon-96.png"          gap:platform="android"    gap:density="xhdpi" />
    <icon src="static/img/icon-96.png"          gap:platform="blackberry" />
    <icon src="static/img/icon-96.png"          gap:platform="blackberry" gap:state="hover"/>
    <icon src="static/img/icon-57.png"          gap:platform="ios"        width="57" height="57" />
    <icon src="static/img/icon-72.png"          gap:platform="ios"        width="72" height="72" />
    <icon src="static/img/icon-135.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="static/img/icon-135.png"         gap:platform="ios"        width="144" height="144" />
    <icon src="static/img/icon-64.png"          gap:platform="webos" />
    <icon src="static/img/icon-48.png"          gap:platform="winphone" />
    <icon src="static/img/icon-135.png"         gap:platform="winphone"   gap:role="background" />

    <gap:splash src="static/img/splash_320_480.png"           gap:platform="android" gap:density="ldpi" />
    <gap:splash src="static/img/splash_640_960.png"           gap:platform="android" gap:density="mdpi" />
    <gap:splash src="static/img/splash_768_1024.png"           gap:platform="android" gap:density="hdpi" />
    <gap:splash src="static/img/splash_1024_768.png"           gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="static/img/splash_320_480.png"           gap:platform="blackberry" />
    <gap:splash src="static/img/splash_320_480.png"           gap:platform="ios"     width="320" height="480" />
    <gap:splash src="static/img/splash_640_960.png"           gap:platform="ios"     width="640" height="960" />
    <gap:splash src="static/img/splash_768_1024.png"           gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="static/img/splash_1024_768.png"           gap:platform="ios"     width="1024" height="768" />
    <gap:splash src="static/img/splash_1024_768.png"           gap:platform="winphone" />
</widget>